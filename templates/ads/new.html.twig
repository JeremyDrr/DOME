{% extends 'base.html.twig' %}

{% block title %}Create an offer{% endblock %}

{% block body %}

    <main>

        <div class="container" id="form" data-aos="fade-up" data-aos-delay="200">
            <h1 class="my-5">Create a new offer</h1>

            {% if not form.vars.valid %}
                <div class="alert alert-danger">
                    {% for child in form.children %}
                        {% for error in child.vars.errors %}
                            {{ error.message }} <br>
                        {% endfor %}
                    {% endfor %}
                </div>
            {% endif %}

            {{ form_start(form) }}
            <div class="row">
                <div class="col">
                    <div class="alert bg-transparent border-light">
                        <h2>General</h2>
                        <hr>
                        <div class="form-group">
                            {{form_label(form.title)}}
                            {{form_widget(form.title)}}
                        </div>
                        <div class="form-group">
                            {{form_label(form.thumbnail)}}
                            {{form_widget(form.thumbnail)}}
                        </div>
                    </div>
                </div>

                <div class="col">
                    <div class="alert bg-transparent border-light">
                        <h2>Details</h2>
                        <hr>
                        <div class="form-group">
                            {{form_label(form.description)}}
                            {{form_widget(form.description)}}
                        </div>


                        <div class="form-group">
                            {{ form_label(form.categories) }}
                            <br>
                            {% for category in form.categories %}
                                {{ form_label(category) }}
                                {{ form_widget(category) }}
                            {% endfor %}
                        </div>

                    </div>
                </div>
            </div>
            <div class="alert bg-transparent border-success clearfix my-5">
                <h2 class="alert-heading">Publish</h2>
                <p>You are about to create a new advertisement</p>

                <button type="submit" class="btn btn-primary float-start">
                    <i class="fa fa-save"></i>
                    Publish</button>
            </div>

            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.ckeditor.com/ckeditor5/35.4.0/balloon/ckeditor.js"></script>
    <script src="/assets/js/ckeditor.js"></script>
{% endblock %}