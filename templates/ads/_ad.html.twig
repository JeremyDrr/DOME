{% set url =  path('ads_show', {'slug': ad.slug}) %}

<div class="col-md-4">
    <div class="card border-dark mb-3">

        <div class="card-header text-center">
            {% if date(ad.publisheddate) > date('-1month', 'Europe/Paris') %}
                <small class="badge bg-info text-dark card-header-pills">New!</small>
            {% endif %}

            <p class="small py-3 mb-0">Published the: {{ ad.publishedDate|date('d F Y') }} by <strong>{{ ad.author.firstName }}</strong></p>

        </div>

        <a href="{{ url }}">
            <img src="{{ ad.thumbnail }}" alt="Cover image of the article: {{ ad.title }}" style="height: 200px; width: 100%; display: block;">
        </a>

        <div class="card-body">
            <h4 class="card-title text-center">
                <a href="{{ url }}">
                    <strong>{{ ad.title }}</strong>

                </a>
            </h4>
            <hr>
       {#     <p class="card-text">{{ article.introduction }}</p>#}
            <a href="{{ url }}" class="btn btn-outline-dark float-end">Read More</a>
        </div>

    </div>
</div>